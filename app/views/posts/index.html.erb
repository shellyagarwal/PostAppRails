<div class="row">
	<div class="col-xs-12">
	<%= render partial: "layouts/slider" %>
	</div>
</div>
<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-11 title">POSTS</div>
</div>
<div class="row">
	<% @posts.each do |p| %>

	<div class="col-xs-8"><%= p.post %></div>

	<div class="col-xs-2"><%= link_to 'Show', p %></div>
	<div class="col-xs-2">
		<% if (p.user_id==current_user.id) %>
		<%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</div>

	<% end %>
</div>
<div class="row">
	<div class="col-xs-10"></div>
	<div class="col-xs-2 new-post">
		<%= link_to 'Add New Post', new_post_path %>
	</div>
</div>